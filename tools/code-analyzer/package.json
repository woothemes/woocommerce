{
	"name": "code-analyzer",
	"version": "1.0.0",
	"description": "A tool to analyze code changes in WooCommerce Monorepo.",
	"author": "Automattic",
	"homepage": "https://github.com/woocommerce/woocommerce",
	"license": "GPLv2",
	"repository": "woocommerce/woocommerce",
	"private": true,
	"types": "dist/index.d.ts",
	"scripts": {
		"analyzer": "node -r ts-node/register ./src/commands/analyzer/index.ts",
		"lint": "eslint . --ext .ts",
		"test": "pnpm test:js",
		"test:js": "jest"
	},
	"dependencies": {
		"@actions/core": "^1.10.1",
		"@commander-js/extra-typings": "^10.0.3",
		"@oclif/core": "^2.15.0",
		"@tsconfig/node16": "^1.0.4",
		"@types/uuid": "^8.3.4",
		"@woocommerce/monorepo-utils": "workspace:*",
		"commander": "^9.5.0",
		"dotenv": "^10.0.0",
		"simple-git": "^3.21.0",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@types/jest": "27.5.x",
		"@types/node": "20.x.x",
		"@woocommerce/eslint-plugin": "workspace:*",
		"eslint": "^8.55.0",
		"jest": "27.5.x",
		"ts-jest": "29.1.x",
		"ts-node": "^10.9.2",
		"tslib": "^2.6.2",
		"typescript": "5.7.x",
		"wireit": "0.14.10"
	},
	"engines": {
		"node": "^20.11.1"
	},
	"config": {
		"ci": {
			"lint": {
				"command": "lint",
				"changes": "src/**/*.ts"
			},
			"tests": [
				{
					"name": "JavaScript",
					"command": "test:js",
					"changes": [
						"jest.config.js",
						"tsconfig.json",
						"src/**/*.ts"
					],
					"events": [
						"pull_request",
						"push"
					]
				}
			]
		}
	}
}
